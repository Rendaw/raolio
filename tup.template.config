# All boolean items are true by default

# true, false
CONFIG_DEBUG=true

# arch64, ubuntu, ubuntu64, windows
CONFIG_PLATFORM=arch64

# g++, clang, cl
CONFIG_COMPILER=g++

# g++, g++-4.8, cl.exe..
CONFIG_COMPILERBIN=g++
CONFIG_CCOMPILERBIN=gcc

# g++, link.exe...
CONFIG_LINKERBIN=g++

# Extra compile flags
# Optional
CONFIG_BUILDFLAGS=

# Extra link flags
# Optional
CONFIG_LINKFLAGS=

# Components
# true, false
CONFIG_BUILDSERVER=true

# true, false
CONFIG_BUILDGUI=true

# Add output of `pkg-config --cflags Qt5Core Qt5Widgets Qt5Gui`
CONFIG_GUIBUILDFLAGS=

# Add output of `pkg-config --libs Qt5Core Qt5Widgets Qt5Gui`
CONFIG_GUILINKFLAGS=

# true, false
CONFIG_BUILDCLI=true
